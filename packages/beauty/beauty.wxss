/* packages/fun/fun.wxss */

page {
    height: 100%;
}

.funNav {
    width: 100%;
    height: 92rpx;
    white-space: nowrap;
}

.funNavType {
    width: 108rpx;
    height: 66rpx;
    display: inline-flex;
    color: #222;
    font-size: 28rpx;
    padding: 0 12rpx;
    margin: 0 16rpx;
    background: rgba(136, 136, 136, 0.38);
    border-radius: 0;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
    box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.54);
    transition: 0.2s ease-in-out;
    vertical-align: top;
    justify-content: space-around;
    align-items: center;
}

.funNavCheck {
    color: wheat;
    height: 80rpx;
    box-shadow: 0 6rpx 10rpx wheat;
}

.funBody {
    width: 100%;
    height: calc(100% - 92rpx);
    overflow-y: scroll;
    box-sizing: border-box;
    padding: 0 32rpx;
    /* display: flex;
    justify-content: space-around; */
}
.funBody .l{
    margin-right: 32rpx;
}
.funBody .l,.funBody .r{
    display: inline-block;
    vertical-align: top;
}

.funImg {
    width: 327rpx;
    margin-bottom: 32rpx;
    display: block;
    box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.54);
    border-radius: 8rpx;
}
