/* subpackages/signIn/signIn.wxss */

page {
    height: 100%;
}

.signInHeader {
    width: 100%;
    height: 224rpx;
    box-sizing: border-box;
    padding: 32rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
}

.signInHeader > view {
    width: 280rpx;
    height: 160rpx;
    display: inline-flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    background: teal;
    border-top-left-radius: 140rpx;
    border-top-right-radius: 140rpx;
    font-size: 28rpx;
    color: white;
    box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.38);
}

.clokInImg {
    width: 100rpx;
    height: 100rpx;
}

/*  ``     `` */

.signTitle {
    font-size: 32rpx;
    line-height: 60rpx;
    color: wheat;
    background: rgba(136, 136, 136, 0.38);
    box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.54);
    text-indent: 32rpx;
}

.signList {
    width: 100%;
    height: calc(100% - 284rpx);
    box-sizing: border-box;
    padding: 32rpx;
    overflow-y: scroll;
    color: white;
}

.signItem {
    width: 100%;
    min-height: 100rpx;
    background: rgba(136, 136, 136, 0.38);
    margin-bottom: 32rpx;
    border-radius: 4rpx;
    text-indent: 16rpx;
    box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.54);
}

.signTime {
    font-size: 60rpx;
    line-height: 80rpx;
}

.signTime1 {
    font-size: 32rpx;
    line-height: 60rpx;
}

.noSign {
    font-size: 32rpx;
    line-height: 60rpx;
    text-align: center;
}
